<% @courses.each do |course| %>
<div class="col-sm-6">
  <div class="widget">
    <div class="widget-advanced">
      <!-- Widget Header -->
      <div class="widget-header text-center themed-background-dark-default">
        <h3 class="widget-content-light">
          <%= link_to course.name , courses_subject_path(course.id) %></a><br>
          <small><%= course.description %></small>
        </h3>
      </div>
      <!-- END Widget Header -->
      <!-- Widget Main -->
      <div class="widget-main">
        <a href="page_ready_elearning_course_lessons.html" class="widget-image-container animation-fadeIn">
          <span class="widget-icon themed-background-default"><i class="fa fa-globe"></i></span>
        </a>
        <div class="row">
          <div class="col-md-7">
          <%=course.users.trainer.size %> trainer, <%=course.users.trainee.size %> trainee
          </div>
          <div class="col-md-5">
            <i class="fa fa-calendar-o fa-2" aria-hidden="true"></i>
            <%= course.start_time %> - <%= course.end_time %>
          </div>
        </div>
      </div>
      <!-- END Widget Main -->
    </div>
  </div>
</div>
<%end%>
