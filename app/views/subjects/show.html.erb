<% provide(:title, t("subject.new.title")) %>
<% provide(:button_text, t("subject.new.create")) %>
<div id="page-content" style="min-height: 1310px;">
  <ul class="breadcrumb breadcrumb-top">
    <li><%= t "subject.index.subject" %></li>
    <li><a href=""><%= t "subject.show.show" %></a></li>
  </ul>
  <div class="col-md-6">
    <div class="block full block-alt-noborder">
      <h3 class="sub-header text-center">
        <strong><%= @subject.name %></strong>
        <%= link_to edit_subject_path(@subject), class: "pull-right" do %><i class="fa fa-pencil"></i><% end %>
      </h3>
      <div class="sub-header"><strong><%= t "subject.index.description" %> </strong><%= @subject.description %></div>
      <p><strong><%= t "subject.index.content" %> </strong></p>
      <div class="row">
        <div class="col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
          <article>
            <%= @subject.content %>
          </article>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="row">
      <div class="col-sm-8 col-lg-9">
          <!-- Add new task functionality (initialized in js/pages/readyTasks.js) -->
          <%= form_for Task.create ,html: { class: "push", id: "add-task-form" }, :remote => true do |f| %>
            <div class="input-group input-group-lg">
              <%= f.text_field :name,class: "form-control",id: "add-task", placeholder: "Add New Task..." %>
              <%= f.hidden_field :subject_id, :value => params[:id] %>
              <div class="input-group-btn">
              <%= f.submit html: '<i class="fa fa-plus"></i>', class: "btn btn-primary",id:"add-task-btn"%>
              </div>
            </div>
          <% end %>
          <!-- Task List -->
          <ul class="task-list">
              <%@tasks.each do |task|%>
              <li>
                  <%= link_to task, method: :delete, data: {confirm: t("user.user.confirm")}, class: "task-close" do %><i class="fa fa-times"></i> <% end %>
                  <!-- <a href="javascript:void(0)" class="task-close"><i class="fa fa-times"></i></a> -->
                  <label class="checkbox-inline">
                      <%= task.id %>. <%= task.name %>
                  </label>
              </li>
              <% end %>
          </ul>
          <!-- END Task List -->
      </div>
    </div>
  </div>
</div>
<script>$(function(){ ReadyTasks.init(); });</script>
