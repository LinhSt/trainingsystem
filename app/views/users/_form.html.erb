<%= form_for(@user, html: { class: "form-horizontal form-bordered form-control-borderless" }) do |f| %>
  <%= render "shared/error_messages", object: @user %>
  <div class="form-group">
    <%= f.label :name, t("user.form.name"), class: "col-md-3 control-label" %>
      <div class="col-md-5">
        <%= f.text_field :name, class: "form-control" %>
      </div>
  </div>
  <div class="form-group">
    <%= f.label :email, t("user.form.email"), class: "col-md-3 control-label" %>
      <div class="col-md-5">
        <%= f.email_field :email, class: "form-control" %>
      </div>
  </div>
  <div class="form-group">
    <%= f.label :password, t("user.form.password"), class: "col-md-3 control-label" %>
      <div class="col-md-5">
        <%= f.password_field :password, class: "form-control" %>
      </div>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, t("user.form.confirmation"), class: "col-md-3 control-label" %>
      <div class="col-md-5">
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
  </div>
  <div class="form-group">
    <label class="col-md-3 control-label" for="example-select">Roles</label>
    <div class="col-md-5">
        <select id="roles_id" name="roles_id" class="form-control" size="1">
            <option value="">--Place roles--</option>
            <option value="1">Suppervisor</option>
            <option value="2">Trainee</option>
        </select>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :schools, t("user.form.schools"), class: "col-md-3 control-label" %>
      <div class="col-md-5">
        <%= f.text_field :schools, class: "form-control" %>
      </div>
  </div>
  <div class="form-group">
    <%= f.label :graduation, t("user.form.graduation"), class: "col-md-3 control-label" %>
      <div class="col-md-5">
        <%= f.text_field :graduation, class: "form-control" %>
      </div>
  </div>
  <div class="form-group">
    <%= f.label :avatar, t("user.form.avatar"), class: "col-md-3 control-label" %>
    <div class="col-md-9">
        <%= f.file_field :avatar, accept: 'image/jpeg,image/gif,image/png' %>
    </div>
  </div>
  <div class="form-group form-actions">
    <div class="col-md-9 col-md-offset-3">
      <%= f.submit yield(:button_text), class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>
<script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>
